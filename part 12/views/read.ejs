<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Back to home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">

            <% if(users.length > 0){ %>
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="width-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= user.imageUrl %>" alt="">
                    </div>
                    <h3 class="text-2xl mt-3 text-center"><%= user.name %></h3>
                    <h5 class="text-2xl mt-3 text-center text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-300" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-400" href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                </div>
            <% }) %>
            <% }else{ %>
                <h3 class="text-zinc-500">no users yet</h3>
            <% } %>

            
        </div>
    </div>
</body>
</html>